{
	"source": {
		"include": ["lib", "README.md"],
		"includePattern": ".js$",
		"excludePattern": "(node_modules/|docs|demo|bin|coverage|dist)"
	},
	"plugins": ["plugins/markdown"],
	"opts": {
		"encoding": "utf8",
		"readme": "./README.md",
		"destination": "docs/",
		"recurse": true,
		"verbose": true,
		"template": "./node_modules/clean-jsdoc-theme",
		"theme_opts": {
			"default_theme": "dark"
		}
	},
	"markdown": {
		"hardwrap": false,
		"idInHeadings": true
		// This is important for clean-jsdoc-theme, otherwise some features might not work.
	}
}
